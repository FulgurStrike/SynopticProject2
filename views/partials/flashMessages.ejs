<% if (successMessages.length > 0) { %>
  <div class="mb-4">
    <% successMessages.forEach(function(message) { %>
      <div class="bg-green-100 border border-green-400 text-green-800 px-4 py-2 rounded relative shadow">
        <%= message %>
      </div>
    <% }) %>
  </div>
<% } %>

<% if (errorMessages.length > 0) { %>
  <div class="mb-4">
    <% errorMessages.forEach(function(message) { %>
      <div class="bg-red-100 border border-red-400 text-red-800 px-4 py-2 rounded relative shadow">
        <%= message %>
      </div>
    <% }) %>
  </div>
<% } %>
