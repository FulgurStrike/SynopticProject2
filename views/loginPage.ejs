<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./CSS/Dropdown.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <style>
      body {
        font-family: 'Inter', sans-serif;
        margin: 0;
        overflow-x: hidden;
      }
    </style>
  </head>

  <body class="bg-sky-100 min-h-screen flex flex-col items-center py-6 sm:py-10 px-4">

    <!-- Header -->
    <div class="w-full max-w-md mx-auto">
      <header class="mb-8 p-4 bg-white rounded-lg shadow-md flex items-center justify-between">
        <a href="/" class="inline-block">
          <button type="button" class="bg-sky-500 hover:bg-sky-600 text-white font-semibold py-2 px-4 rounded-lg text-sm transition-colors duration-150">
            Back to Homepage
          </button>
        </a>
        <div class="relative">
          <div class="flex items-center space-x-2 cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" viewBox="0 0 20 20" fill="currentColor" id="profileMenuTrigger">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
      </header>
    </div>

    <!-- Login Card -->
    <div class="bg-white p-8 rounded-xl shadow-lg w-full max-w-md space-y-6">

      <% if (errorMessages.length > 0) { %>
        <div class="text-red-700 bg-red-100 border border-red-400 rounded p-3 text-sm text-center">
          <%= errorMessages[0] %>
        </div>
      <% } %>

      <% if (successMessages.length > 0) { %>
        <div class="text-green-700 bg-green-100 border border-green-400 rounded p-3 text-sm text-center">
          <%= successMessages[0] %>
        </div>
      <% } %>

      <h2 class="text-3xl font-bold text-center text-gray-800"><%= formHeaderText %></h2>

      <form action="/login" method="POST" class="space-y-4">

        <!-- Email Field -->
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700"><%= email %></label>
          <div class="relative">
            <input
              type="email"
              id="email"
              name="email"
              required
              autofocus
              placeholder="you@example.com"
              class="mt-1 block w-full pl-10 pr-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-400"
            />
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-gray-400">
              <!-- Email icon -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12l-4-4-4 4m8 0H4m16 0h-4" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Password Field -->
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700"><%= password %></label>
          <div class="relative">
            <input
              type="password"
              id="password"
              name="password"
              required
              placeholder="********"
              class="mt-1 block w-full pl-10 pr-10 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-400"
            />
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-gray-400">
              <!-- Lock icon -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c.485 0 .928.184 1.265.513A1.785 1.785 0 0114 13a1.785 1.785 0 01-.513 1.265A1.785 1.785 0 0112 15a1.785 1.785 0 01-1.265-.513A1.785 1.785 0 0110 13c0-.485.184-.928.513-1.265A1.785 1.785 0 0112 11zm-6 3v5a2 2 0 002 2h8a2 2 0 002-2v-5M6 11V7a6 6 0 1112 0v4" />
              </svg>
            </div>
            <button
              type="button"
              id="togglePassword"
              class="absolute inset-y-0 right-0 flex items-center px-3 text-gray-600 hover:text-sky-600 focus:outline-none"
            >
              <!-- Eye Icon -->
              <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              <svg id="eyeOffIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M13.875 18.825A10.05 10.05 0 0112 19c-4.477 0-8.268-2.943-9.542-7a9.956 9.956 0 012.236-3.528m3.323-2.377A9.953 9.953 0 0112 5c4.477 0 8.268 2.943 9.542 7a9.978 9.978 0 01-4.422 5.337M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M3 3l18 18"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <button
            type="submit"
            class="w-full bg-lime-600 text-white py-3 px-4 rounded-md hover:bg-lime-700 transition duration-200 text-base font-semibold shadow hover:shadow-md"
          >
            <%= loginButton %>
          </button>
        </div>
      </form>

      <p class="text-center text-sm text-gray-600">
        <%= dontHaveAccount %>
        <a href="/signup" class="text-lime-700 font-medium hover:underline"><%= signUpLinkText %></a>
      </p>
    </div>

    <!-- Fullscreen Menu -->
    <div id="fullscreenMenu">
      <button id="closeMenuButton" aria-label="Close menu">&times;</button>
      <nav class="flex flex-col items-center">
        <a href="/" class="menu-item">Back to home</a>
        <a href="/cropPage" class="menu-item">Database</a>
        <a href="/cropRecommendationPage" class="menu-item">Recommendations</a>
        <% if (!isLoggedIn) { %>
          <a href="/login" class="menu-item">Login</a>
          <a href="/signUp" class="menu-item">Sign-up</a>
        <% } else { %>
          <a href="/logout" class="menu-item text-red-300 hover:bg-red-700 hover:text-red-100">Logout</a>
          <a href="/messages" class="menu-item text-red-300 hover:bg-red-700 hover:text-red-100">Messages</a>
        <% } %>
      </nav>
    </div>

    <script src="./Scripts/Dropdown.js"></script>
    <script>
      const passwordInput = document.getElementById('password');
      const toggleBtn = document.getElementById('togglePassword');
      const eyeIcon = document.getElementById('eyeIcon');
      const eyeOffIcon = document.getElementById('eyeOffIcon');

      toggleBtn.addEventListener('click', () => {
        const isHidden = passwordInput.type === 'password';
        passwordInput.type = isHidden ? 'text' : 'password';
        eyeIcon.classList.toggle('hidden', !isHidden);
        eyeOffIcon.classList.toggle('hidden', isHidden);
      });
    </script>
  </body>
</html>

